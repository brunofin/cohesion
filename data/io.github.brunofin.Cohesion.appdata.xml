<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>io.github.brunofin.Cohesion</id>
  <name>Cohesion</name>
  <summary>Unofficial Notion Desktop client</summary>
  
  <launchable type="desktop-id">io.github.brunofin.Cohesion.desktop</launchable>

  <metadata_license>FSFAP</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>An Electron wrapper around Notion</p>
    <p>NOTE: This wrapper is not verified by, affiliated with, or supported by Notion Inc.</p>
  </description>

  <url type="bugtracker">https://github.com/brunofin/cohesion/issues</url>
  <url type="homepage">https://github.com/brunofin/cohesion</url>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="money-purchasing">intense</content_attribute>
  </content_rating>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/brunofin/cohesion/main/data/screenshots/screenshot-1.png</image>
      <caption>Login screen</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release version="1.0.6" date="2024-06-27">
      <description>
        <p>#17 Color scheme: switching between dark/light themes not working in Flatpak without reopening Cohesion (fix inside)</p>
        <p>#16 don't open Notion invoice in Cohesion</p>
        <p>#14 firefox extension is not automatically closing tab after opening cohesion</p>
      </description>
    </release>
    <release version="1.0.5" date="2024-04-22">
      <description>
        <p>#9 A javascript error occurred in the main process</p>
        <p>#8 Is there a way to disable spell check?</p>
        <p>#3 Notifications are not detected when there are more than 9</p>
      </description>
    </release>
    <release version="1.0.4" date="2024-04-16">
      <description>
        <p>Add Chrome and Firefox extensions to open Notion links shared in 3rd party apps in Cohesion instead of the browser. Check the GitHub README.md file for extension links.</p>
      </description>
    </release>
    <release version="1.0.3" date="2024-03-07" />
    <release version="1.0.2" date="2024-03-04" />
    <release version="1.0.1" date="2024-03-04" />
    <release version="1.0" date="2024-03-04" />
  </releases>

  <developer_name>Bruno Finger</developer_name>
  <update_contact>bruno.k.finger_at_gmail.com</update_contact>
</component>
