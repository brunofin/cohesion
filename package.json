{
  "name": "cohesion",
  "version": "1.0.6",
  "description": "A Notion Desktop client for Linux",
  "main": "dist/index.js",
  "scripts": {
    "dist": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run dist && electron .",
    "build": "npm run dist && electron-builder",
    "build:extensions": "cd browser-extension && ./build.sh",
    "prebuild:flatpak": "git submodule update --init --recursive",
    "build:flatpak": "./flatpak/generate-sources.sh"
  },
  "author": "Bruno Finger <bruno.k.finger@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.2"
  },
  "build": {
    "appId": "io.github.brunofin.Cohesion",
    "directories": {
      "output": "./build"
    },
    "files": [
      "dist",
      "package.json"
    ],
    "extraFiles": [
      "data"
    ]
  }
}
